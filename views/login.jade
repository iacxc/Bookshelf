
extends layout

block script
    script(type="text/javascript").
        $(document).ready(function() {
            $("#formLogin").on("submit", function(e) {
                e.preventDefault();
                var uid = $("#txtUid").val();
                if (!uid || uid.trim().length == 0) {
                    alert("#{resources.username} cannot be empty");
                    return;
                }
                this.submit();
            });
        });

block content
    div.divInput(style="margin-left:100px;padding:20px;width:240px")
        form(id="formLogin" method="post" action="/users/login")
            table(align="center")
                tr
                    td 
                        label(for="txtUid")= resources.username
                    td
                        input(type="text" id="txtUid" name="txtUid" maxLength="20")
                tr
                    td
                        label(for="txtPass")= resources.password
                    td
                        input(type="password" id="txtPass" name="txtPass" maxLength="20")
                tr
                    td(colspan="2")
                tr
                    td(colspan="2" align="center")
                        input(type="Submit" value="#{resources.login}")
             

