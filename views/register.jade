
<!DOCTYPE html>
<html>
  <head>
    <title>User Registeration</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript"
            src="http://apps.bdimg.com/libs/jquery/2.1.1/jquery.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {
        $("#formRegister").on("submit", function(e) {
            e.preventDefault();
            var uid = $("#txtUid").val();
            if (!uid || uid.trim().length == 0) {
                alert("Username cannot be empty");
                return;
            }
            var pass1 = $("#txtPass").val();
            var pass2 = $("#txtPass2").val();
            if (!pass1 || ! pass2) {
                alert("Password cannot be empty");
                return;
            }
            if (pass1 != pass2) {
                alert("Password not match");
                return;
            }

            this.submit();
        });
    });
    </script>
  </head>
  <body>
      <div id="divForm">
          <form id="formRegister" method="post" action="/users/register">
              <p><b>Sign in</b></p>
              <p><label for="txtUid">Username</label>
              <br/><input type="text" id="txtUid" name="txtUid" maxLength=20/></p>
              <p><label for="txtPass">Password</label>
              <br/><input type="password" id="txtPass" name="txtPass" maxLength=20/></p>
              <p><label for="txtPass2">Retype Password</label>
              <br/><input type="password" id="txtPass2" maxLength=20/></p>
              <p><input type="Submit" value="Register"/>
                 <input type="Reset" value="Reset"/></p>
          </form>
      </div>
  </body>
</html>
