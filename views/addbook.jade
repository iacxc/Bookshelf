extend layout

block script
    script(type="text/javascript").
        $(document).ready(function() {
            $("#frmAdd").on("submit", function(e) {
                e.preventDefault();
                var name = $("#name");
                if (name.val().trim() == "") {
                    alert("#{resources.bookname} cannot be empty");
                    name.focus();
                    return;
                } 

                var series = $("#series");
                if (series.val().trim() == "") {
                    alert("#{resources.bookseries} cannot be empty");
                    series.focus();
                    return;
                } 
                
                var author = $("#author");
                if (author.val().trim() == "") {
                    alert("#{resources.bookauthor} cannot be empty");
                    author.focus();
                    return;
                } 

                var isbn = $("#isbn");
                if (isbn.val().trim() == "") {
                    alert("#{resources.isbn} cannot be empty");
                    isbn.focus();
                    return;
                } 

                this.submit();
            });
        });
        
block content
    div.divInput(style="margin-left:100px;padding:30px;width:300px")
        form(id="frmAdd" method="post" action="/add")
            table
                tr
                    td 
                        label(for="name")= resources.bookname
                    td *
                    td
                        input(id="name" name="name")
                tr
                    td 
                        label(for="series")= resources.bookseries
                    td *
                    td
                        input(id="series" name="series")
                tr
                    td
                        label(for="author")= resources.bookauthor
                    td *
                    td
                        input(id="author" name="author")
                tr
                    td
                        label(for="isbn")= resources.isbn
                    td *
                    td
                        input(id="isbn" name="isbn")
                tr
                    td 
                        label(for="owner")= resources.bookowner
                    td *
                    td
                        select(id="owner" name="owner")
                            each user in users
                                option(value="#{user.id}")= user.Fullname()
                        
                tr
                    td(align="right" colspan="2")
                        input(type="submit" value="#{resources.ok}")
                    td
                        input(type="reset" value="#{resources.reset}")                        